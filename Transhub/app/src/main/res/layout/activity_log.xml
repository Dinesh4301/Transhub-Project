<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neerajagrawal.transhub.LogActivity"
    android:background="@drawable/main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/Login"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/Join"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Join"
        android:background="#00FFFFFF"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#f7fdff"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Join"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="-21dp" />

    <Button
        android:id="@+id/Join"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_above="@+id/Login"
        android:layout_centerHorizontal="true"
        android:background="#d1d1d1"
        android:text="JOIN"
        android:textSize="25dp"
        android:layout_marginStart="28dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#f7fdff"
        android:text="Already a member..?"
        android:layout_alignBaseline="@+id/Login"
        android:layout_alignBottom="@+id/Login"
        android:layout_toLeftOf="@+id/Login"
        android:layout_toStartOf="@+id/Login"
        android:layout_marginStart="2dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/Join"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T R A N S H U B"

        android:textColor="#040404"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:textIsSelectable="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
